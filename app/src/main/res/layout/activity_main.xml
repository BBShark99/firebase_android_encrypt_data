<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/initialkey_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="initialKey"
            android:inputType="textPersonName" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nconfirmation_id" android:hint="nconfirmation"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nminconfirmation_id" android:hint="nminconfirmation"/>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encrypt and Send to Firebase" />

        <EditText
            android:id="@+id/ini_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="InitialKey"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/ncon_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="nconfirmations"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/nmin_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="nminconfirmation"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_decrypt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Decrypt and Receive from Firebase" />
    </LinearLayout>
</RelativeLayout>